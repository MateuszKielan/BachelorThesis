#:kivy 2.3.1
ScreenManager:
    StartingScreen:
    ConverterScreen:

<StartingScreen>:
    name: "start"
    orientation: "vertical"
    padding: 20
    spacing: 10

    canvas.before:
        Color:
            rgb: 1, 1, 1 
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Welcome to CoW Interface"
        color: 0,0,0
        font_size: 25
        pos_hint: {"center_x": 0.5, "y": 0.08}

    Button:
        text: "Select File"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.44}
        on_press: root.select_file()

    Label:
        id: file_path_label
        text: "No File Selected"
        color: 0,0,0
        size_hint_y: None
        height: 40
        pos_hint: {"center_x": 0.5, "y": 0.38}
    
    Button:
        text: "Convert"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.15}
        on_press: root.switch()
    
<ConverterScreen>:
    name: "converter"
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle
            pos: self.pos
            size: self.size

    