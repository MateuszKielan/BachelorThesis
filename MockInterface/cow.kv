#:kivy 2.3.1
ScreenManager:
    StartingScreen:
    ConverterScreen:

<StartingScreen>:
    name: "start"
    orientation: "vertical"
    padding: 20
    spacing: 10

    canvas.before:
        Color:
            rgb: 1, 1, 1 
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Welcome to CoW Interface"
        color: 0,0,0
        font_size: 25
        pos_hint: {"center_x": 0.5, "y": 0.08}

    Button:
        text: "Select File"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.44}
        on_press: root.select_file()

    Label:
        id: file_path_label
        text: "No File Selected"
        color: 0,0,0
        size_hint_y: None
        height: 40
        pos_hint: {"center_x": 0.5, "y": 0.38}
    
    Button:
        text: "Convert"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.3}
        on_press: root.switch()
    
<ConverterScreen>:
    name: "converter"
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 1 

        # Left Section - CSV Preview
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33 
            canvas.before:
                Color:
                    rgb: 0.9, 0.9, 0.9
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "CSV Preview"
                font_size: 20
                bold: True
                color: 0, 0, 0
                size_hint_y: None

            BoxLayout:
                id: csv_preview_container
                orientation: "vertical"
                size_hint:1,1
                spacing: 20
            

        # Middle Section - Vocabulary Recommendations
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33
            canvas.before:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Vocabulary Recommender"
                font_size: 20
                bold: True
                color: 0,0,0
                size_hint_y: None
                
            
            GridLayout:
                id: vocab_recommender
                cols: 1
                pos_hint: {'center_x': 0.5, 'y': 0.9}
                height: 500
                spacing: 5


        # Right Section - JSON Preview / Editing
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33
            canvas.before:
                Color:
                    rgb: 0.9, 0.8, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "JSON Preview"
                font_size: 20
                bold: True

<DataPopup>
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Csv Preview"
            color: 1,1,1
            size_hint_y: None

        BoxLayout:
            id: popup_data_container 

        Button:
            text: "Close"
            on_press: root.dismiss_popup()
            size_hint: None, None
            size: 300, 50
            pos_hint: {"center_x": 0.5, "y": 0.2}
        
<RecommendationPopup>
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Recommendations Preview"
            color: 1,1,1
            size_hint_y: None

        BoxLayout:
            id: popup_recommendations

        Button:
            text: "Close"
            on_press: root.dismiss_popup()
            size_hint: None, None
            size: 300, 50
            pos_hint: {"center_x": 0.5, "y": 0.2}