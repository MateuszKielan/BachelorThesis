#:kivy 2.3.1

<StartingScreen>:
    orientation: "vertical"
    padding: 20
    spacing: 10

    canvas.before:
        Color:
            rgb: 1, 1, 1 
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Welcome to CoW Interface"
        color: 0,0,0
        font_size: 25
        pos: root.width * 0.45, root.height / 2

    Button:
        text: "Select File"
        size_hint: None, None
        size: 200, 50
        pos: root.width * 0.4, root.height * 0.45
        on_press: root.select_file()

    Label:
        id: file_path_label
        text: "No File Selected"
        color: 0,0,0
        size_hint_y: None
        height: 40
        pos: root.width * 0.45, root.height * 0.4
    
    Button:
        text: "Convert"
        size_hint: None, None
        size: 200, 50
        pos: root.width * 0.4, root.height * 0.20
    
